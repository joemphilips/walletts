{
  "name": "walletts-core",
  "version": "1.0.0",
  "description": "extendable, composable, and hackable bitcoin wallet",
  "main": "build/main/index.js",
  "typings": "build/main/index.d.ts",
  "module": "build/module/index.js",
  "repository": "https://github.com/joemphilips/walletts",
  "license": "MIT",
  "keywords": [],
  "scripts": {
    "info": "npm-scripts-info",
    "build": "run-s clean && run-p build:*",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
     "dev": "run-p dev:*",
    "dev:main": "tsc -p tsconfig.json -w",
    "dev:module": "tsc -p tsconfig.module.json -w",
    "protoc": "protoc --plugin=protoc-gen-ts=./node_modules/.bin/protoc-gen-ts --js_out=import_style=commonjs,binary:src/proto  --ts_out=service=true:src/proto -I ./proto proto/*.proto",
    "fix": "run-s fix:prettier fix:tslint",
    "fix:prettier": "prettier 'src/**/*.ts' --write",
    "fix:tslint": "tslint --fix --project . --exclude 'src/proto/*'",
    "test": "run-s test:build && run-p test:lint test:unit test:nsp",
    "test-without-nsp": "run-s test:build && run-p test:lint test:unit",
    "test:build": "run-s clean && tsc -p tsconfig.test.json",
    "test:lint": "tslint --project . --exclude 'src/proto/*' && prettier 'src/**/*.ts' --list-different",
    "test:unit": "nyc ava --verbose",
    "test:nsp": "nsp check",
    "watch": "run-s clean build:main && run-p 'build:main -- -w' 'test:unit -- --watch'",
    "cov": "run-s test:build test:unit cov:html && opn coverage/index.html",
    "cov:html": "nyc report --reporter=html",
    "cov:send": "nyc report --reporter=lcov > coverage.lcov && codecov",
    "cov:check": "nyc report && nyc check-coverage --lines 100 --functions 100 --branches 100",
    "doc": "run-s doc:html && opn build/docs/index.html",
    "doc:html": "typedoc src/ --target ES6 --mode file --out build/docs",
    "doc:json": "typedoc src/ --target ES6 --mode file --json build/docs/typedoc.json",
    "doc:publish": "gh-pages -m '[ci skip] Updates' -d build/docs",
    "version": "standard-version",
    "reset": "git clean -dfx && git reset --hard && yarn",
    "clean": "trash build",
    "all": "run-s reset test cov:check doc:html",
    "prepare-release": "run-s all version doc:publish",
    "preinstall": "node -e \"if(process.env.npm_execpath.indexOf('yarn') === -1) throw new Error('walletts must be installed with Yarn: https://yarnpkg.com/')\""
  },
  "scripts-info": {
    "info": "Display information about the package scripts",
    "build": "Clean and rebuild the project",
    "fix": "Try to automatically fix any linting problems",
    "test": "Lint and unit test the project",
    "watch": "Watch and rebuild the project on save, then rerun relevant tests",
    "cov": "Rebuild, run tests, then create and open the coverage report",
    "doc": "Generate HTML API documentation and open it in a browser",
    "doc:json": "Generate API documentation in typedoc JSON format",
    "changelog": "Bump package.json version, update CHANGELOG.md, tag release",
    "reset": "Delete all untracked files and reset the repo to the last commit",
    "prepare-release": "One-step: clean, build, test, publish docs, and prep a release"
  },
  "engines": {
    "node": ">=8.9"
  },
  "dependencies": {
    "awilix": "^3.0.6",
    "bip39": "^2.5.0",
    "bitcoin-core": "^2.0.0",
    "bitcoinjs-lib": "^3.3.2",
    "bunyan": "^1.8.12",
    "bunyan-prettystream": "^0.1.3",
    "chalk": "^2.3.2",
    "commander": "^2.15.0",
    "espree": "^3.5.4",
    "eventemitter2": "^5.0.1",
    "fp-ts": "^1.2.0",
    "ini": "^1.3.5",
    "inquirer": "^5.1.0",
    "lodash": "^4.17.5",
    "mali-logger": "^0.2.1",
    "node-pre-gyp": "mapbox/node-pre-gyp#master",
    "protobufjs": "^6.8.6",
    "secure-random": "^1.1.1",
    "sha.js": "^2.4.10",
    "zeromq": "^4.6.0"
  },
  "devDependencies": {
    "@types/bitcoinjs-lib": "^3.3.1",
    "@types/bunyan": "^1.8.4",
    "@types/glob": "^5.0.35",
    "@types/google-protobuf": "^3.2.7",
    "@types/ini": "^1.3.29",
    "@types/inquirer": "^0.0.37",
    "@types/lodash": "^4.14.106",
    "@types/mkdirp": "^0.5.2",
    "@types/node": "8",
    "@types/request": "^2.47.0",
    "@types/zeromq": "^4.6.1",
    "ava": "^1.0.0-beta.3",
    "codecov": "^3.0.0",
    "cz-conventional-changelog": "^2.1.0",
    "fs-extra": "^5.0.0",
    "gh-pages": "^1.0.0",
    "husky": "^0.14.3",
    "immutable": "^3.8.2",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^4.1.2",
    "npm-scripts-info": "^0.3.6",
    "nsp": "^3.2.1",
    "nyc": "^11.5.0",
    "opn-cli": "^3.1.0",
    "prettier": "^1.10.2",
    "ps-node": "^0.1.6",
    "standard-version": "^4.0.0",
    "trash-cli": "^1.4.0",
    "tslint": "^5.4.3",
    "tslint-config-prettier": "^1.8.0",
    "tslint-immutable": "^4.5.1",
    "typedoc": "^0.11.1",
    "typescript": "^2.4.1"
  },
  "ava": {
    "failFast": true,
    "files": [
      "build/main/**/*.spec.js",
      "build/test/**/*.spec.js",
      "build/test/test/**/*.js"
    ],
    "sources": [
      "build/test/**/*.js"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "greenkeeper": {
    "ignore": [
      "@types/node"
    ]
  },
  "prettier": {
    "singleQuote": true
  },
  "nyc": {
    "exclude": [
      "**/*.spec.js"
    ]
  }
}
